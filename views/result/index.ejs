<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Display</title>
    <style>
        /* Set body and wrapper to take full height */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            display: flex;
            flex-direction: column;
            font-family: Arial, sans-serif;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        /* Center the heading at the top half */
        h1 {
            margin: 0;
            padding: 20px;
            text-align: center;
            color: #333;
            background-color: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2em;
        }

        /* Product grid in the bottom half */
        .product-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            align-items: center;
            padding: 20px;
            background-color: #fafafa;
            flex: 1;
            overflow-y: auto;
        }

        /* Styling for each product card */
        .product-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            width: 200px;
            height: 410px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            color: white; /* Ensures readability on darker backgrounds */
        }

        .product-card img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .product-name {
            font-size: 1.2em;
            color: white;
            margin: 10px 0 5px;
        }

        .product-brand {
            font-size: 0.9em;
            color: #ddd;
            margin: 5px 0;
            text-transform: capitalize;
        }

        .product-price {
            font-size: 1em;
            color: #71a3d1; /* SteelBlue for contrast */
            font-weight: bold;
            margin: 5px 0;
        }

        .uploaded-image {
            max-width: 300px;
            max-height: 300px;
            height: auto;
            margin: 20px auto;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <h1 id="userImageHeading">User Uploaded Image</h1>
        <img src="<%= base64Image %>" alt="User Uploaded Image" class="uploaded-image" />
        <h1 id="productsHeading">Recommended Products</h1>
        <div class="product-grid" id="productGrid">
            <% searchResults.forEach(item => { %>
                <% item.results.forEach(product => { %>
                    <a href="<%= product.link %>" class="product-link" target="_blank">
                        <div class="product-card">
                            <img src="<%= product.imageUrl %>" alt="<%= product.title %> Image">
                            <h2 class="product-name"><%= product.title %></h2>
                            <p class="product-brand">Category: <%=item.searchQuery%></p>
                            <p class="product-price"><%= product.price %></p>
                        </div>
                    </a>
                <% }) %>
            <% }) %>
        </div>
    </div>
    <script>
        // Define color palette array
        const colorPalette = [
            { hex: '#c6c5bd', name: 'Silver' },
            { hex: '#52311d', name: 'SaddleBrown' },
            { hex: '#1c1715', name: 'Black' },
            { hex: '#3f4f58', name: 'DarkSlateGray' },
            { hex: '#71a3d1', name: 'SteelBlue' }
        ];

        // Apply colors to headings
        document.getElementById('userImageHeading').style.backgroundColor = colorPalette[0].hex; // Silver
        document.getElementById('productsHeading').style.backgroundColor = colorPalette[4].hex; // SteelBlue

        // Apply colors to each product card, cycling through palette
        const productCards = document.querySelectorAll('.product-card');
        productCards.forEach((card, index) => {
            const color = colorPalette[index % colorPalette.length].hex;
            card.style.backgroundColor = color;
        });
    </script>
</body>
</html>
